{{ form_start(form, {'attr': {'class': 'custom-form contact-form', 'role': 'form'}}) }}
    <h2 class="mb-4 pb-2">Contactez Papoel</h2>

    <div class="row">
        <div class="col-lg-6 col-md-6 col-12">
            <div class="form-floating">
                {{ form_widget(form.fullname, {'attr': {'class': 'form-control', 'placeholder': 'Nom complet'}}) }}
                {{ form_label(form.fullname, null, {'attr': {'for': 'full-name'}}) }}
            </div>
        </div>

        <div class="col-lg-6 col-md-6 col-12">
            <div class="form-floating">
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'email@exemple.com'}}) }}
                {{ form_label(form.email, null, {'attr': {'for': 'email'}}) }}
            </div>
        </div>

        <div class="col-lg-12 col-12">
            <div class="form-floating">
                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Describe message here'}}) }}
                {{ form_label(form.message, null, {'attr': {'for': 'message'}}) }}
            </div>
        </div>
    </div>

    <button type="submit" class="form-control">Envoyer le message</button>
{{ form_end(form) }}
